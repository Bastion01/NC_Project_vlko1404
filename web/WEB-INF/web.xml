<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>app.servlets.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>app.servlets.ListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>app.servlets.DeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>app.servlets.UpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listcompanies</servlet-name>
        <servlet-class>app.servlets.ListCompaniesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>listcompanies</servlet-name>
        <url-pattern>/listcompanies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addcompany</servlet-name>
        <servlet-class>app.servlets.AddCompanyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addcompany</servlet-name>
        <url-pattern>/addcompany</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deletecompany</servlet-name>
        <servlet-class>app.servlets.DeleteCompanyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deletecompany</servlet-name>
        <url-pattern>/deletecompany</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updatecompany</servlet-name>
        <servlet-class>app.servlets.UpdateCompanyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>updatecompany</servlet-name>
        <url-pattern>/updatecompany</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>joinlist</servlet-name>
        <servlet-class>app.servlets.JoinServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>joinlist</servlet-name>
        <url-pattern>/joinlist</url-pattern>
    </servlet-mapping>


</web-app>